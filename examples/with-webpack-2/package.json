{
  "name": "with-webpack-2",
  "version": "0.1.0",
  "private": true,
  "description": "An example usage of react-md and webpack 2. Client side only.",
  "scripts": {
    "prebuild": "npm run clean && npm run test",
    "build": "webpack --env.production",
    "clean": "rimraf public",
    "start:dev": "nodemon --exec \"webpack-dev-server --progress --colors --host=0.0.0.0 --env.development\"",
    "start": "node src/server.js",
    "test": "cross-env BABEL_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cross-env": "^4.0.0",
    "helmet": "^3.5.0",
    "morgan": "^1.8.1",
    "normalize.css": "^6.0.0",
    "react": "^15.5.4",
    "react-addons-css-transition-group": "^15.5.2",
    "react-addons-transition-group": "^15.5.2",
    "react-dom": "^15.5.4",
    "react-hot-loader": "latest",
    "react-md": "latest"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "postcss-loader": "^1.3.3",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2"
  },
  "jest": {
    "timers": "fake",
    "globals": {
      "__DEV__": true
    },
    "setupFiles": [
      "<rootDir>/src/setup/beforeTest.js"
    ],
    "moduleDirectories": [
      "<rootDir>/src",
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
